<?xml version="1.0" encoding="UTF-8"?>
<configuration>

    <appender name="console" class="ch.qos.logback.core.ConsoleAppender">
        <encoder>
            <pattern>%highlight(%-5.5level) %cyan(%d{yyyy.MM.dd HH:mm:ss.SSS}) [%-4.36thread] %yellow(%logger) %highlight(%msg) %n</pattern>
        </encoder>
    </appender>

    <root level="info">
        <appender-ref ref="console"/>
    </root>

</configuration>